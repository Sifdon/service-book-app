<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.srinathv.servicebook.MechanicActivity">

    <TextView
        android:id="@+id/txtimbooked"
        android:layout_width="wrap_content"
        android:layout_height="181dp"
        android:text="Immediate services booked to be displayed here"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="11dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Immediate services booked:"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txtscheduled"
        android:layout_width="wrap_content"
        android:layout_height="146dp"
        android:text="Scheduled services to be displayed here"
        android:layout_marginTop="41dp"
        app:layout_constraintTop_toBottomOf="@+id/txtimbooked"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Services scheduled: "
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtimbooked"
        android:layout_marginLeft="11dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
